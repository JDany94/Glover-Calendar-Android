<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BE111111"
    tools:context=".SplashScreen">

    <ImageView

        android:id="@+id/iv_SplashScreen"
        android:layout_width="250dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/iv_Descripcion"
        android:src="@mipmap/ic_launcher_foreground" />

    <TextView
        android:id="@+id/tv_SlashScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/font_titulos"
        android:gravity="center"
        android:text="@string/tv_SplashScreen"
        android:textColor="@color/tvTitulos"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>